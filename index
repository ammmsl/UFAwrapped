<script>
    const CONFIG = {
        apiKey: "AIzaSyB4FKQrbrtGpBztkZVriYkEGsXlnLXHAN0",
        sheetID: "1kI6E4J0pL4lUa2NH-FYEd2rWUE7Uzsz-CnGOg68ERtc",
        baseUrl: "https://sheets.googleapis.com/v4/spreadsheets"
    };

    let globalData = {
        attendance: [],
        summary: [],
        users: []
    };

    // --- Init ---
    async function init() {
        try {
            const [attRes, sumRes] = await Promise.all([
                fetch(`${CONFIG.baseUrl}/${CONFIG.sheetID}/values/PivotAttendance?key=${CONFIG.apiKey}`).then(r=>r.json()),
                fetch(`${CONFIG.baseUrl}/${CONFIG.sheetID}/values/Summary Sheet?key=${CONFIG.apiKey}`).then(r=>r.json())
            ]);

            globalData.attendance = attRes.values.slice(1);
            globalData.summary = sumRes.values.slice(1);
            
            // Extract unique users
            const userSet = new Set(globalData.attendance.map(r => r[0]));
            globalData.users = Array.from(userSet).sort();

            processAndRender();
            
            // Hide Loader
            setTimeout(() => {
                document.getElementById('loader').style.opacity = '0';
                setTimeout(() => document.getElementById('loader').style.display = 'none', 500);
            }, 1000);

        } catch (e) {
            alert("Error loading data. Please refresh.");
            console.error(e);
        }
    }

    function processAndRender() {
        // --- Slide 2: Global Stats ---
        const totalSessions = globalData.attendance.length;
        const totalMoney = globalData.summary.reduce((acc, row) => acc + (parseFloat(row[4]?.replace(/[^\d.-]/g, '')) || 0), 0);
        
        animateValue(document.getElementById('totalSessionsGlobal'), 0, totalSessions, 2000);
        document.getElementById('totalMoneyGlobal').innerText = totalMoney.toLocaleString();

        // --- Slide 3: Monthly Chart ---
        const months = {};
        globalData.attendance.forEach(row => {
            const m = row[2]; // Month column
            if(m) months[m] = (months[m] || 0) + 1;
        });
        
        // Sort months specifically for chart
        const monthOrder = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"];
        const labels = Object.keys(months).sort((a,b) => monthOrder.indexOf(a) - monthOrder.indexOf(b));
        const data = labels.map(k => months[k]);

        renderChart(labels, data);

        // --- Data Prep for Leaderboard & Roster ---
        const userCounts = {};
        globalData.attendance.forEach(row => {
            const u = row[0];
            userCounts[u] = (userCounts[u] || 0) + 1;
        });

        // Convert to array and sort by Count DESC
        const sortedUsers = Object.entries(userCounts).sort(([,a], [,b]) => b - a);

        // --- Slide 4: Leaderboard (Top 3) ---
        const top3 = sortedUsers.slice(0, 3);
        const lbContainer = document.getElementById('leaderboardList');
        top3.forEach((u, index) => {
            lbContainer.innerHTML += `
                <div class="leaderboard-item" style="transition-delay: ${index * 200}ms">
                    <div class="rank">#${index + 1}</div>
                    <div class="player-name">${u[0]}</div>
                    <div class="score">${u[1]}</div>
                </div>
            `;
        });

        // --- Slide 6: Full Roster (NEW) ---
        const rosterContainer = document.getElementById('fullRosterList');
        sortedUsers.forEach((u, index) => {
            rosterContainer.innerHTML += `
                <div class="roster-item">
                    <div class="rank" style="font-size: 1rem; opacity: 0.7;">${index + 1}</div>
                    <div class="player-name" style="font-size: 0.95rem;">${u[0]}</div>
                    <div class="score" style="font-size: 1rem;">${u[1]}</div>
                </div>
            `;
        });


        // Intersection Observer for Animations
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    if (entry.target.id === 'slide4') {
                        document.querySelectorAll('.leaderboard-item').forEach(el => el.classList.add('visible'));
                    }
                }
            });
        }, { threshold: 0.5 });
        
        document.querySelectorAll('section').forEach(s => observer.observe(s));
    }

    // --- Search Logic ---
    const searchInput = document.getElementById('userSearch');
    const suggestBox = document.getElementById('suggestions');

    searchInput.addEventListener('input', (e) => {
        const val = e.target.value.toLowerCase();
        suggestBox.innerHTML = '';
        if(!val) return;

        const matches = globalData.users.filter(u => u.toLowerCase().includes(val)).slice(0, 5);
        matches.forEach(name => {
            const chip = document.createElement('div');
            chip.className = 'suggestion-chip';
            chip.innerText = name;
            chip.onclick = () => generateCard(name);
            suggestBox.appendChild(chip);
        });
    });

    function generateCard(name) {
        searchInput.value = '';
        suggestBox.innerHTML = '';
        
        // Calculate Stats
        const userRows = globalData.attendance.filter(r => r[0] === name);
        const count = userRows.length;
        
        // Calculate Rank
        const allCounts = {};
        globalData.attendance.forEach(r => allCounts[r[0]] = (allCounts[r[0]] || 0) + 1);
        const sortedRanks = Object.entries(allCounts).sort(([,a], [,b]) => b - a);
        const rankIndex = sortedRanks.findIndex(x => x[0] === name);
        const rank = rankIndex + 1;

        // Favorite Month
        const uMonths = {};
        userRows.forEach(r => uMonths[r[2]] = (uMonths[r[2]] || 0) + 1);
        const favMonth = Object.entries(uMonths).sort(([,a], [,b]) => b - a)[0]?.[0] || '-';

        // Persona Logic
        let persona = "ROOKIE";
        if (count > 50) persona = "LEGEND";
        else if (count > 30) persona = "VETERAN";
        else if (count > 15) persona = "REGULAR";
        else if (count > 5) persona = "RISING STAR";

        // Render
        document.getElementById('cardName').innerText = name;
        document.getElementById('cardSessions').innerText = count;
        document.getElementById('cardRank').innerText = `#${rank}`;
        document.getElementById('cardFavMonth').innerText = favMonth;
        document.getElementById('playerPersona').innerText = persona;
        
        const card = document.getElementById('playerCard');
        card.style.display = 'block';
        
        // Confetti effect
        confetti({
            particleCount: 100,
            spread: 70,
            origin: { y: 0.8 },
            colors: ['#5271ff', '#00ff88', '#ffffff']
        });
    }

    // --- Chart ---
    function renderChart(labels, data) {
        const ctx = document.getElementById('monthChart').getContext('2d');
        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [{
                    data: data,
                    backgroundColor: 'rgba(0, 255, 136, 0.8)',
                    borderRadius: 4,
                    barThickness: 15
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: { legend: { display: false } },
                scales: {
                    x: { ticks: { color: '#aaa', font: { size: 10 } }, grid: { display: false } },
                    y: { display: false }
                }
            }
        });
    }

    // --- Utils ---
    function animateValue(obj, start, end, duration) {
        let startTimestamp = null;
        const step = (timestamp) => {
            if (!startTimestamp) startTimestamp = timestamp;
            const progress = Math.min((timestamp - startTimestamp) / duration, 1);
            obj.innerHTML = Math.floor(progress * (end - start) + start);
            if (progress < 1) window.requestAnimationFrame(step);
        };
        window.requestAnimationFrame(step);
    }

    init();
</script>
</body>
</html>
